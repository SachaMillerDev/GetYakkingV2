<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetYakkingV2.ScoreboardPage"
             BackgroundColor="#7ABFFF">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <!-- Title Button with Rounded Corners -->
        <Button Text="Scoreboard" IsEnabled="False" BackgroundColor="white" TextColor="#3e89cf" FontSize="Large" CornerRadius="20"/>

        <!-- Buttons for scoreboard actions -->
        <Button x:Name="addPlayerButton" Text="Add Player" Style="{StaticResource ScoreboardButtonStyle}" TextColor="Green" Clicked="OnAddPlayerClicked"/>
        <Button x:Name="removePlayerButton" Text="Remove Player" Style="{StaticResource ScoreboardButtonStyle}" TextColor="Red" Clicked="OnRemovePlayerClicked"/>
        <Button x:Name="viewButton" Text="View" Style="{StaticResource ScoreboardButtonStyle}" Clicked="OnViewClicked"/>
    </StackLayout>
</ContentPage>

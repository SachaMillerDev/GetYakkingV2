<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetYakkingV2.RiskyPage">
    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="button1" Text="Rules" Clicked="OnButton1Clicked" 
                    BackgroundColor="#3e89cf" HorizontalOptions="End" WidthRequest="100" HeightRequest="40"/>
            <Label x:Name="messageLabel" Grid.Row="1" Opacity="0" VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" BackgroundColor="White"/>
        </Grid>
    </StackLayout>
</ContentPage>

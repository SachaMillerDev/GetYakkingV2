<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetYakkingV2.ClassicPage"
             BackgroundColor="#3e89cf">

    <StackLayout>
        <!-- Rules Button at the top right with margin -->
        <Button x:Name="rulesButton" Text="Rules" BackgroundColor="white" TextColor="#3e89cf" Clicked="OnRulesClicked" HorizontalOptions="End" VerticalOptions="Start" Margin="0,10,10,0" WidthRequest="150" HeightRequest="50" />
        <Grid VerticalOptions="FillAndExpand">
            <!-- Existing Grid definitions -->
            <Image Source="C:\Users\SachaMiller\source\repos\GetYakkingV2\Imges\Rules.png" Aspect="AspectFill"/>
            <Label x:Name="rulesLabel" Text="Welcome to Classic Get Yakking, How the game works: The chief will read the card and the yakkers will answer, the Chief will then decide the best answer and award them a point with the scoring system. Each round the Chief will change to the next player." Margin="100,10,100,5" IsVisible="False" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" />
            <Grid x:Name="card" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="330" WidthRequest="250" Margin="50,50,50,50">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCardTapped"/>
                </Grid.GestureRecognizers>
                <Grid x:Name="frontView" BackgroundColor="white">
                    <Image Source="C:\Users\SachaMiller\source\repos\GetYakkingV2\Imges\Classic_Cover.png" Aspect="AspectFit"/>
                </Grid>
                <Grid x:Name="backView" BackgroundColor="LightCoral" IsVisible="False">
                    <!-- Add Flip Counter Label here -->
                    <Label x:Name="flipCounterLabel" Text="Flips - 0" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>
                </Grid>
            </Grid>
        </Grid>
    </StackLayout>
</ContentPage>
